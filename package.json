{
  "name": "rekit",
  "version": "0.2.11",
  "description": "Toolkit and boilerplate for creating React + Redux + React-router applications.",
  "bin": {
    "rekit": "./bin/cli.js"
  },
  "scripts": {
    "start": "node ./tools/server.js",
    "build": "node ./tools/build.js",
    "codecov": "codecov",
    "test": "node ./tools/run_test.js",
    "test:app": "node ./tools/run_test.js app",
    "test:cli": "node ./tools/run_test.js cli",
    "test:rekit": "mocha \"test/cli/rekit.js\"",
    "test:npm": "node ./test/cli/npm.js",
    "build:test": "node ./tools/build_test_server.js",
    "add:feature": "node ./tools/cli/add_feature.js",
    "add:action": "node ./tools/cli/add_action.js",
    "add:async-action": "node ./tools/cli/add_async_action.js",
    "add:page": "node ./tools/cli/add_page.js",
    "add:component": "node ./tools/cli/add_component.js",
    "rm:feature": "node ./tools/cli/rm_feature.js",
    "rm:action": "node ./tools/cli/rm_action.js",
    "rm:async-action": "node ./tools/cli/rm_async_action.js",
    "rm:page": "node ./tools/cli/rm_page.js",
    "rm:component": "node ./tools/cli/rm_component.js"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "babel-preset-stage-0"
    ],
    "plugins": [
      "lodash",
      [
        "module-resolver",
        {
          "alias": {
            "src": "./src",
            "features": "./src/features"
          }
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "nyc": {
    "include": [
      "index.js",
      "src/**/*.js",
      "tools/cli/*.js"
    ],
    "exclude": [
      "tools/**/feature_template",
      ".tmp"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": true,
    "sourceMap": false,
    "instrument": true
  },
  "webpackDevServerPort": 6076,
  "buildTestServerPort": 6077,
  "dependencies": {
    "babel-core": "^6.13.2",
    "babel-polyfill": "^6.13.0",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.14.2",
    "memobind": "^0.5.0",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.6.1",
    "react-router-redux": "^4.0.5",
    "redux": "^3.5.2",
    "redux-logger": "^2.6.1",
    "redux-thunk": "^2.1.0",
    "reselect": "^2.5.3",
    "shelljs": "^0.7.3",
    "style-loader": "^0.13.1",
    "superagent": "^2.1.0",
    "trash": "^3.4.1"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-istanbul": "^2.0.0",
    "babel-plugin-lodash": "^3.2.6",
    "babel-plugin-module-resolver": "^2.1.1",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.11.6",
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "css-loader": "^0.25.0",
    "enzyme": "^2.4.1",
    "eslint": "^3.2.2",
    "eslint-config-airbnb": "^11.0.0",
    "eslint-import-resolver-babel-module": "^2.0.1",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-jsx-a11y": "^2.1.0",
    "eslint-plugin-react": "^6.0.0",
    "estraverse": "^4.2.0",
    "estraverse-fb": "^1.3.1",
    "file-loader": "^0.9.0",
    "istanbul-lib-coverage": "^1.0.0",
    "istanbul-lib-report": "^1.0.0-alpha.3",
    "istanbul-reports": "^1.0.0-alpha.8",
    "jsdom": "^9.4.2",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "lodash-webpack-plugin": "^0.10.0",
    "mocha": "^3.0.2",
    "mocha-webpack": "^0.6.0",
    "nock": "^8.0.0",
    "npm-run": "^4.1.0",
    "nyc": "^8.1.0",
    "react-addons-test-utils": "^15.3.0",
    "react-hot-loader": "^3.0.0-beta.3",
    "redux-mock-store": "^1.1.4",
    "sinon": "^1.17.5",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1",
    "webpack-dashboard": "0.1.8",
    "webpack-dev-server": "^1.14.1",
    "webpack-node-externals": "^1.3.3"
  }
}
