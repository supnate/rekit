    "docs:publish": "npm run docs:prepare && rm -rf _book && gitbook build"
  },
  "dependencies": {
    "argparse": "^1.0.7",
    "download-git-repo": "^1.0.2",
    "lodash": "^4.17.4",
    "resolve-cwd": "^2.0.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^4.15.0",
    "shelljs": "^0.8.0"
  }
}
